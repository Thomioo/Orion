{
    "manifest_version": 2,
    "name": "Sleek Sidebar",
    "version": "1.1",
    "description": "A sleek sidebar that slides in on shortcut or button click.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Sleek Sidebar"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "http://192.168.2.101:8000/*"
    ],
    "web_accessible_resources": [
        "sidebar.html",
        "sidebar.js"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}