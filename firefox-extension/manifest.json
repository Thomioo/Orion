{
    "manifest_version": 2,
    "name": "Orion",
    "version": "1.1",
    "description": "Orion, a powerful tool that slides in on shortcut or button click.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Orion"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "http://192.168.2.101:8000/*",
        "http://localhost:8000/*",
        "http://127.0.0.1:8000/*"
    ],
    "web_accessible_resources": [
        "sidebar.html",
        "sidebar.js"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}