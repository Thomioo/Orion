{
    "manifest_version": 3,
    "name": "Orion",
    "version": "1.0",
    "description": "Orion, the ultimate way for seamless connection with your phone.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Orion",
        "default_icon": {
            "16": "imgs/icon.png",
            "32": "imgs/icon.png",
            "48": "imgs/icon.png",
            "128": "imgs/icon.png"
        }
    },
    "icons": {
        "16": "imgs/icon.png",
        "32": "imgs/icon.png",
        "48": "imgs/icon.png",
        "128": "imgs/icon.png"
    },
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": false
    },
    "permissions": [
        "tabs",
        "activeTab",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws: wss: http: https:;"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sidebar.html",
                "sidebar.js",
                "imgs/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Toggle Orion"
        }
    }
}